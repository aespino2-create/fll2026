<body>
  <div id="intro">
    <img src="portada.png" alt="Portada" />
    <div id="intro-text">
      <h1>FLL 2026 ‚Äî Galeria de Missions</h1>
      <p>Explora cada repte i la seva puntuaci√≥</p>
    </div>
  </div>

  <div id="modal" onclick="tancarModal()">
    <img id="modalImg" src="" alt="Zoom" />
  </div>

  <header>
    <h1>Galeria de missions</h1>
    <p>Fes clic en una missi√≥ per veure-la i llegir-ne la descripci√≥</p>
  </header>

  <main>
    <div id="menu" class="menu"></div>

    <div id="viewer" class="viewer">
      <button class="back-btn" onclick="mostrarMenu()">‚Üê Tornar al men√∫</button>
      <h2 id="nombreFoto"></h2>
      <img id="imagenFoto" alt="Foto" onclick="obrirModal(this.src)" />
      <div id="descripcionFoto" class="descripcion"></div>
      <div id="puntuacionFoto" class="puntuacion"></div>

      <!-- ‚úÖ nova pestanya desplegable -->
      <div id="extraSection" class="toggle-section">
        <div class="toggle-header" onclick="toggleExtra()">üìÑ M√©s informaci√≥</div>
        <div class="toggle-content" id="extraContent"></div>
      </div>
    </div>
  </main>

  <script>
    let datos = [];

    async function cargarDatos() {
      try {
        const resp = await fetch('data.json');
        datos = await resp.json();
        crearMenu();
      } catch (err) {
        document.getElementById('menu').innerHTML = '<p>Error al cargar data.json</p>';
        console.error(err);
      }
    }

    function crearMenu() {
      const menu = document.getElementById('menu');
      menu.innerHTML = '';
      datos.forEach((item, i) => {
        const btn = document.createElement('button');
        btn.textContent = item.nombre;
        btn.onclick = () => mostrarFoto(i);
        menu.appendChild(btn);
      });
    }

    function mostrarFoto(i) {
      const menu = document.getElementById('menu');
      const viewer = document.getElementById('viewer');
      const item = datos[i];

      menu.classList.add('oculto');
      setTimeout(() => {
        menu.style.display = 'none';
        document.getElementById('nombreFoto').textContent = item.nombre;
        document.getElementById('imagenFoto').src = item.imagen;
        document.getElementById('descripcionFoto').textContent = item.descripcion;
        document.getElementById('puntuacionFoto').innerHTML =
          'Puntuaci√≥: ' + renderEstrellas(item.puntuacion) + ` (${item.puntuacion})`;

        // ‚úÖ assignar text extra (si n'hi ha)
        document.getElementById('extraContent').innerText = item.extra || "Sense informaci√≥ addicional";

        viewer.style.display = 'flex';
        setTimeout(() => viewer.classList.add('visible'), 50);
      }, 500);
    }

    function mostrarMenu() {
      const menu = document.getElementById('menu');
      const viewer = document.getElementById('viewer');
      viewer.classList.remove('visible');
      setTimeout(() => {
        viewer.style.display = 'none';
        menu.style.display = 'grid';
        setTimeout(() => menu.classList.remove('oculto'), 50);
      }, 500);
    }

    function renderEstrellas(score) {
      const filled = Math.round(score);
      return '‚òÖ'.repeat(filled) + '‚òÜ'.repeat(10 - filled);
    }

    // üîç Modal zoom
    function obrirModal(src) {
      const modal = document.getElementById('modal');
      const modalImg = document.getElementById('modalImg');
      modalImg.src = src;
      modal.style.display = 'flex';
    }

    function tancarModal() {
      document.getElementById('modal').style.display = 'none';
    }

    window.addEventListener('keydown', (e) => {
      if (e.key === "Escape") tancarModal();
    });

    // ‚úÖ Funci√≥ per desplegar o tancar la pestanya
    function toggleExtra() {
      const section = document.getElementById('extraSection');
      section.classList.toggle('abierto');
    }

    // Pantalla de portada
    window.addEventListener('load', () => {
      const intro = document.getElementById('intro');
      setTimeout(() => {
        intro.classList.add('oculto');
      }, 8000);
    });

    cargarDatos();
  </script>
</body>
